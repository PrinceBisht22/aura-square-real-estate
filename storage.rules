rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // 1. LISTINGS FOLDER: public read, restricted write (owner only)
    match /listings/{userId}/{listingId}/{allFiles=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. DEALER VERIFICATIONS: read for owner or admin, write for owner only
    match /dealer_verifications/{userId}/{allFiles=**} {
      // Allow read if authenticated AND either the user is the folder owner OR they are an admin.
      // Note: in Storage rules, read from Firestore uses (default) database.
      allow read: if request.auth != null
                  && ( request.auth.uid == userId
                       || get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' );
      // Only the owner may upload/write
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 3. Block everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}